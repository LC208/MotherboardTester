<Window x:Class="MotherboardTester.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotherboardTester"
        mc:Ignorable="d"
        Title="ChoiceWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,91,0,0">
            <Button Content="Поломка 1" Width="200" Click="ChoiceButton_Click"/>
            <Button Content="Поломка 2" Width="200" Click="ChoiceButton_Click" Margin="5"/>
            <Button Content="Поломка 3" Width="200" Click="ChoiceButton_Click"/>
            <Button Content="Поломка 4" Width="200" Click="ChoiceButton_Click" Margin="5"/>
            <Button Content="Поломка 5" Width="200" Click="ChoiceButton_Click"/>
            <Button Content="Поломка 6" Width="200" Click="ChoiceButton_Click" Margin="5"/>
            <Button Content="Поломка 7" Width="200" Click="ChoiceButton_Click"/>
            <Button Content="Поломка 8" Width="200" Click="ChoiceButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
