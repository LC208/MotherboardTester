<Window x:Class="MotherboardTester.OscilloscopeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Осциллограф" Height="300" Width="500">
    <Grid>
        <Canvas x:Name="OscilloscopeCanvas" Background="White" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Старт" Width="80" Margin="5" Click="StartButton_Click"/>
            <Button Content="Стоп" Width="80" Margin="5" Click="StopButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
